{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noEmit": true,                     // Ensure noEmit is true
    "allowImportingTsExtensions": true  // Allows importing TypeScript files directly
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
