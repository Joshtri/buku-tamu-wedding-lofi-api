{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",               // Use NodeNext for better ESM support
    "moduleResolution": "NodeNext",     // NodeNext module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "allowImportingTsExtensions":true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
